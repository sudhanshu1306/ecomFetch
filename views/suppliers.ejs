<%- include('header.ejs') %>

<div style="margin-left:210px;">

  <h1 align="center">Welcome to suppliers page</h1>
  <div class="container">
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Number</th>
          <th scope="col">Supplier Name</th>
          <th scope="col">Product Name</th>
          <th scope="col">Product Price(In USD)</th>
          <th scope="col">Quantity</th>
          <th scope="col">Deactivated</th>
        </tr>
      </thead>
      <tbody>
        <% suppliers.forEach((supplier,index)=>{ %>
        <tr>
          <th scope="row"><%= index+1%> </th>
          <td><%= supplier.name %></td>
          <td><%= supplier.product %></td>
          <td><%= supplier.price %></td>
          <td><%= supplier.quantity %></td>
          <td>

            <form class="" action="/deactivate" method="post">

              <select class="custom-select" id="inputGroupSelect03" name="deactivated">
                <option selected><%=supplier.deactivated%></option>
                <option value="true">True</option>
                <option value="false">False</option>
              </select>
              <input type="text" name="product" value="<%= id %>" hidden>
              <div class="input-group-prepend">
                <button class="btn btn-outline-secondary btn-sm" type="submit" name="id" value="<%=supplier._id%>">Change</button>
              </div>
            </form>
          </td>
        </tr>

        <% }) %>

      </tbody>
    </table>
  </div>
  </div>
</body>

</html>
